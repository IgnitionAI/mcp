{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "ESNext",
      "target": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "skipLibCheck": true,
      "sourceMap": false,
      "removeComments": false
    },
    "include": ["server.ts", "tools/**/*.ts", "resources/**/*.ts", "prompts/**/*.ts", "types.ts"]
  }
  